  body
    .container
      .homepage
        section.logo
          img(src="/public/images/logoplustext.svg")
        section.text
          h2 Show your currently playing song on this display.
          h3 Connect with
          div(id="buttons")
            div.button-container
              a.button(href="/spotify/authorize").button--spotify
                img(src="/public/images/spotify-logo.svg")
              a.button.button--lastfm#lastfmButton
                img(src="/public/images/lastfm-logo.svg")
          div(id="lastfmUsernameInput" style="display: none")
            div.lastfm-username-container
              .row
                h4 Last.fm Username
                div(id="close")
                  img(src="/public/images/twotone-close-24px-black.svg")
              .row
                p(id="error")
              .row
                form#usernameForm
                  input(type="text" name="username")
                  input(type="submit" name="sumbitButton" value="Connect").button.button--connect
          h3 or 
            a(href="https://www.youtube.com/watch?v=Sniz7l2zR9E") watch the demo
          footer
            //- p.
            //-   Spotify access tokens generated by this application can only access data about your currently playing song.
            a.logo(href="https://inclushe.com")
              img(src="/public/images/inclushe_logo.svg")
  script(src="/public/scripts/index.js")