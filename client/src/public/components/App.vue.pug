.app
  transition(v-if="!isLocalTrack" name="bg-transition" :duration="4500")
    .background(:style="{'background-image': `url('${coverArtImageURI}')`}" :key="coverArtImageURI")
  transition(name="gradient-transition" :duration="4500")
    .background.background--gradient(:style="{'background-image': `url('${gradientImageURI}')`, 'opacity': gradientOpacity}" :key="gradientImageURI")
  .display(v-if="state === 'playing'")
    transition(name="cover-transition" :duration="4500")
      .display__album-cover(v-if="!isLocalTrack" :style="{'background-image': `url('${coverArtImageURI}')`}" @click="toggleBackground" :key="coverArtImageURI")
    .display__info(:class="{ 'display__info--local': isLocalTrack }")
      transition(name="info-transition" :duration="1500")
        h1(:key="title") {{ title }}
      transition(name="info-transition" :duration="1500")
        h2(:key="album") {{ album }}
      transition(name="info-transition" :duration="1500")
        h3(:key="artists") {{ artists }}
  .status-view(v-else-if="state === 'waiting'")
    h1 Nothing Playing
    p.
      Play a song on Spotify and it will show up here.
    p.
      Make sure your device is online with Private Listening turned off.
  .status-view(v-else-if="state === 'error'")
    h1 Error
    p This can usually be resolved by re-authenticating.
    p <a href="/spotify/authorize">Click here to re-authenticate.</a>
    pre {{ JSON.stringify(errorMessage, null, 2) }}
  .status-view(v-else)
    h1.loading Loading
  .settings-button
    img(src="../images/twotone-settings-24px.svg")
    span Settings
  .settings
    header.settings__header
      h1
        img(src="../images/twotone-settings-24px.svg")
        span Settings
      .settings__close-button
        img(src="../images/twotone-close-24px.svg")
        span Close
    section.settings__setting
      h2 Provider
      .settings__radio
        label(for="spotify").settings__radio-button.settings__radio-button--provider
          input(type="radio" name="provider" value="spotify" id="spotify" checked)
          span.input-span Spotify
          img(src="../images/spotify-logo.svg")
        label(for="lastfm").settings__radio-button.settings__radio-button--provider
          input(type="radio" name="provider" value="lastfm" id="lastfm")
          span.input-span Last.fm
          img(src="../images/lastfm-logo.svg")
    section.settings__setting
      h2 Background
      .settings__radio
        label(for="albumart" style="background-image: url('../images/background-cover.svg')").settings__radio-button.settings__radio-button--background
          input(type="radio" name="background" value="albumart" id="albumart" checked)
          span.input-span Album Art
          span.description Album Art
        label(for="gradient" style="background-image: url('../images/background-gradient.svg')").settings__radio-button.settings__radio-button--background
          input(type="radio" name="background" value="gradient" id="gradient")
          span.input-span Gradient
          span.description Gradient
        label(for="both" style="background-image: url('../images/background-both.svg')").settings__radio-button.settings__radio-button--background
          input(type="radio" name="background" value="both" id="both")
          span.input-span Both
          span.description Both
        label(for="solid" style="background-image: url('../images/background-solid.svg')").settings__radio-button.settings__radio-button--background
          input(type="radio" name="background" value="solid" id="solid")
          span.input-span Solid Color
          span.description Solid Color
    section.settings__setting
      h2 Animations
    section.settings__setting
      h2 Track Info
    section.settings__setting
      h2 Reset