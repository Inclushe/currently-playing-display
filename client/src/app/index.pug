<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet" href="/public/stylesheets/reset.styl")
    link(rel="stylesheet" href="/public/stylesheets/app.styl")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Barlow+Condensed:400,700|Barlow+Semi+Condensed|Barlow:400,500,900&display=swap")
    title Currently Playing Display
    style.
      h1.loading {
        animation: loading 500ms ease infinite;
      }
      @keyframes loading {
        0% {
          transform: scaleX(1)
        }
        50% {
          transform: scaleX(1.1)
        }
        100% {
          transform: scaleX(1)
        }
      }
  body
    #app
    script(src="/public/scripts/app.js")