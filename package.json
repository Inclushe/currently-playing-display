{
  "name": "currently-playing-display",
  "version": "0.0.1",
  "description": "currently-playing-display",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:Inclushe/currently-playing-display.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "parcel build client/src/index.pug client/src/app/index.pug --out-dir client/dist",
    "serve": "npm run build && nodemon server/start.js",
    "test": "npm run test:client:build && npm run test:client && npm run test:server",
    "watch": "concurrently \"parcel watch client/src/index.pug client/src/app/index.pug --out-dir client/dist\" \"nodemon server/start.js\"",
    "test:client": "npm run test:client:build && mocha ./client/.temp --reporter min --require jsdom-global/register",
    "test:client:build": "parcel build client/tests/App.test.js --out-dir client/.temp --log-level 1",
    "test:client:watch": "npm run test:client:build && concurrently \"npm run test:client:parcel:watch\" \"mocha --watch ./client/.temp --reporter min --require jsdom-global/register\"",
    "test:client:parcel:watch": "parcel watch client/tests/App.test.js --out-dir client/.temp",
    "test:server": "mocha server/tests/ --reporter min",
    "test:server:watch": "mocha --watch server/tests/ --reporter min"
  },
  "author": "Inclushe",
  "license": "ISC",
  "alias": {
    "vue": "./node_modules/vue/dist/vue.js",
    "vuex": "./node_modules/vuex/dist/vuex.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "give-me-a-gradient": "^0.2.2",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.1",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "mocha": "^6.1.4",
    "supertest": "^4.0.2",
    "@vue/component-compiler-utils": "^3.0.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^13.0.1",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.3",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "parcel": "^1.12.3",
    "pug": "^2.0.4",
    "stylus": "^0.54.5",
    "vue": "^2.6.10",
    "vue-hot-reload-api": "^2.3.3",
    "vue-template-compiler": "^2.6.10",
    "vuex": "^3.1.1"
  }
}
